pipeline {

    agent none   // üëà VERY IMPORTANT

    environment {
        APP_DIR = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app'
    }

    stages {

        stage('Clean Workspace') {
            agent any
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            agent any
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/ashwinsai22/DevSecOps-Project.git'
            }
        }

        stage('Build & Test (Docker Maven)') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17-alpine'
                    args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }

            stages {

                stage('Maven Build') {
                    steps {
                        dir("${APP_DIR}") {
                            sh 'mvn clean compile'
                        }
                    }
                }

                stage('Unit Tests') {
                    steps {
                        dir("${APP_DIR}") {
                            sh 'mvn test || true'
                        }
                    }
                    post {
                        always {
                            junit allowEmptyResults: true,
                                  testResults: '**/target/surefire-reports/*.xml'
                        }
                    }
                }

                stage('Package') {
                    steps {
                        dir("${APP_DIR}") {
                            sh 'mvn package -DskipTests'
                        }
                    }
                }

            }
        }

        stage('SonarQube Analysis') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17-alpine'
                }
            }
            steps {
                dir("${APP_DIR}") {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        withSonarQubeEnv('sonar-server') {
                            sh '''
                              mvn sonar:sonar \
                              -Dsonar.projectKey=spring-boot-demo \
                              -Dsonar.projectName=spring-boot-demo
                            '''
                        }
                    }
                }
            }
        }

        stage('Quality Gate') {
            agent any
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build completed successfully'
        }
        unstable {
            echo '‚ö†Ô∏è Build UNSTABLE (checks failed but pipeline continued)'
        }
        failure {
            echo '‚ùå Build failed'
        }
    }
}
